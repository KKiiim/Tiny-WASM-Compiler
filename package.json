{
  "name": "tiny-wasm-compiler",
  "version": "0.0.0",
  "description": "JIT compiler for WASM",
  "type": "module",
  "scripts": {
    "check:prettier": "prettier -c .",
    "check:cspell": "cspell \"{src,chapters,docs}/**/*.{hpp,cpp,c,h,md}\"",
    "check:clang-format": "find src -regex \".*\\.\\(cpp\\|hpp\\|c\\|h\\)\" | xargs clang-format -style=file --Werror --dry-run",
    "check:all": "npm run check:prettier && npm run check:cspell && npm run check:clang-format",
    "fix:prettier": "prettier -c --write .",
    "build:demo": "rm build -fr && mkdir build && cd build && cmake .. && make -j && cd ..",
    "test:c1": "qemu-aarch64 -L /usr/aarch64-linux-gnu ./build/demo/Compiler chapters/Chapter01/add.wasm",
    "test:c2": "qemu-aarch64 -L /usr/aarch64-linux-gnu ./build/demo/Compiler chapters/Chapter02/local.0.wasm",
    "preCommit": "npm run check:all && npm run build:demo"
  },
  "devDependencies": {
    "@types/node": "^20.12.13",
    "prettier": "^3.0.2"
  }
}
